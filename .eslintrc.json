{
  "parser":  "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "globals": {
    "describe": true,
    "beforeEach": true,
    "it": true,
    "expect": true,
    "test": true
  },
  "parserOptions": {
    "ecmaVersion":  2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "@typescript-eslint"
  ]
}
