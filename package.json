{
  "name": "multicolour",
  "version": "1.0.0-pre-beta",
  "description": "Generate your REST API with JSON and use almost any SQL DB tech.",
  "keywords": [
    "Multicolour",
    "REST API",
    "generator",
    "ORM",
    "CQRS",
    "microservice",
    "event-stream"
  ],
  "main": "index.js",
  "preferGlobal": true,
  "bin": {
    "multicolour": "cli.js"
  },
  "scripts": {
    "linters": "npm run flow && npm run eslint",
    "eslint": "eslint ./**/*.js",
    "flow": "flow",
    "strip-flow-types-lib": "flow-remove-types -p --out-dir ./dist/lib/ ./lib/",
    "strip-flow-types-index": "flow-remove-types -p --out-dir ./dist/ ./index.js",
    "strip-flow-types": "npm run strip-flow-types-lib && npm run strip-flow-types-index",
    "package": "npm run strip-flow-types && npm run copy-schema",
    "copy-schema": "cp -R schema dist/",
    "unit-tests": "jest tests/*.js --coverage",
    "test": "npm run unit-tests",
    "prepublish": "npm run package",
    "dev": "nodemon --ignore dist/ --exec \"npm run package\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Multicolour/multicolour.git"
  },
  "author": "newworldcode <hello@newworld.codes> (https://newworld.codes)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Multicolour/multicolour/issues"
  },
  "homepage": "https://github.com/Multicolour/multicolour#readme",
  "dependencies": {
    "ajv": "^6.5.5",
    "knex": "^0.14.2",
    "toposort": "^2.0.2"
  },
  "engine-strict": true,
  "engines": {
    "node": ">= 11.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "eslint": "^4.11.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "flow-bin": "^0.60.1",
    "flow-node": "^1.2.3",
    "jest": "^21.2.1",
    "jest-flow-transform": "^1.0.1",
    "newman": "^3.8.3",
    "nodemon": "^1.18.6"
  },
  "jest": {
    "transform": {
      "^.+\\.js(?:\\.flow)?$": "jest-flow-transform"
    }
  }
}
