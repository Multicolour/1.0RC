{
  "name": "multicolour",
  "version": "1.0.0-pre-beta",
  "description": "Generate your REST API with JSON and use almost any SQL DB tech.",
  "keywords": [
    "Multicolour",
    "REST API",
    "generator",
    "ORM",
    "CQRS",
    "microservice",
    "event-stream"
  ],
  "main": "index.js",
  "preferGlobal": true,
  "bin": {
    "multicolour": "cli.js"
  },
  "scripts": {
    "linters": "npm run eslint",
    "eslint": "eslint ./**/*.js",
    "unit-tests": "jest --maxWorkers=4",
    "test": "npm run unit-tests",
    "dev": "ts-node index.ts --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Multicolour/multicolour.git"
  },
  "author": "newworldcode <hello@newworld.codes> (https://newworld.codes)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Multicolour/multicolour/issues"
  },
  "homepage": "https://github.com/Multicolour/multicolour#readme",
  "dependencies": {
    "ajv": "^6.5.5",
    "bluebird": "^3.5.3",
    "debug": "^4.1.0",
    "formidable": "^1.2.1",
    "knex": "^0.14.2",
    "toposort": "^2.0.2",
    "typescript-json-schema": "^0.36.0"
  },
  "engine-strict": true,
  "engines": {
    "node": ">= 11.1.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/jest": "^24.0.9",
    "@types/json-schema": "^7.0.3",
    "@types/node": "^11.10.4",
    "babel-eslint": "^8.0.3",
    "big-list-of-naughty-strings": "^1.0.0",
    "codacy-coverage": "^3.3.0",
    "eslint": "^4.11.0",
    "jest": "^24.1.0",
    "newman": "^3.8.3",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/mocks",
      "<rootDir>/lib/better-errors/ajv-syntax-or-reference-error.ts",
      "tests/content/uncaught-error-handlers.ts"
    ],
    "setupFiles": [
      "./tests/content/uncaught-error-handlers.ts"
    ],
    "coverageReporters": [
      "lcov",
      "json",
      "html",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.tsx?$",
    "testPathIgnorePatterns": [
      "<rootDir>/tests/content",
      "<rootDir>/tests/mocks"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^@lib(.*)$": "<rootDir>/lib/$1",
      "^@mc-types(.*)$": "<rootDir>/types/$1"
    }
  }
}
